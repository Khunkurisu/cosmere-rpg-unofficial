<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">
	<section class="grid grid-5col">
		<aside class="sidebar">
			{{> "systems/cosmere-rpg-unofficial/templates/actor/parts/actor-core.hbs"}}
		</aside>

		<section class="main grid-span-4">
			{{!-- Sheet Header --}}
			<header class="sheet-header">
				<img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100"
					width="100" />
				<div class="header-fields">
					<div class="resources grid grid-4col">
						<section class="main grid-span-2 align-left">
							<label for="name" class="resource-label">Name</label>
							<input name="name" type="text" value="{{actor.name}}" placeholder="Name" />
						</section>
						<section class="main align-right">
							<label for="null" class="resource-label"></label>
						</section>
						<section class="main align-right">
							<label for="system.level" class="resource-label">Level</label>
							<input name="system.level" type="text" value="{{system.level}}" data-dtype="Number" />
						</section>
					</div>
					<div class="resources grid grid-3col">
						<div class="resource align-left">
							<label for="system.ancestry.name" class="resource-label">Ancestry</label>
							{{#if system.ancestry}}
								<div class="resource-content flexrow flex-right flex-between">
									<input type="text" name="system.ancestry.name" value="{{system.ancestry.name}}"
										data-dtype="string" disabled="true" />
								</div>
							{{else}}
								<div class="resource-content flexrow flex-right flex-between">
									<input type="text" name="system.ancestry.name" value="" data-dtype="string"
										disabled="true" />
								</div>
							{{/if}}
						</div>
						<div class="resource align-left">
							<label for="system.path.name" class="resource-label">Initial Path</label>
							{{#if system.path.[0]}}
								<div class="resource-content flexrow flex-right flex-between">
									<input type="text" name="system.path.0.name" value="{{system.path.0.name}}"
										data-dtype="string" disabled="true" />
								</div>
							{{else}}
								<div class="resource-content flexrow flex-right flex-between">
									<input type="text" name="system.path" value="" data-dtype="string"
										disabled="true" />
								</div>
							{{/if}}
						</div>
					</div>
					<div class="resources flexrow flexlarge flex-between flex-group-center">
						<div class="resource">
							<label for="system.usePlotDice" class="resource-label">Plot Dice</label>
							<div class="resource-content flexrow flex-right flex-between">
								{{#if system.usePlotDice}}
									<a class='dice-control plot-dice-off' title='{{localize 'Disable Plot Dice'}}'
										data-type='Equipment'>
										<i class="fa-solid fa-toggle-on fa-xl"></i>
									</a>
								{{else}}
									<a class='dice-control plot-dice-on' title='{{localize 'Enable Plot Dice'}}'
										data-type='Equipment'>
										<i class="fa-solid fa-toggle-off fa-xl"></i>
									</a>
								{{/if}}
							</div>
						</div>
						<div class="resource">
							<label for="system.hasAdvantage" class="resource-label">Advantage</label>
							<div class="resource-content flexrow flex-right flex-between">
								{{#if system.hasAdvantage}}
									<a class='dice-control advantage-off' title='{{localize 'Disable Advantage'}}'
										data-type='Equipment'>
										<i class="fa-solid fa-toggle-on fa-xl"></i>
									</a>
								{{else}}
									<a class='dice-control advantage-on' title='{{localize 'Enable Advantage'}}'
										data-type='Equipment'>
										<i class="fa-solid fa-toggle-off fa-xl"></i>
									</a>
								{{/if}}
							</div>
						</div>
						<div class="resource">
							<label for="system.hasDisadvantage" class="resource-label">Disadvantage</label>
							<div class="resource-content flexrow flex-right flex-between">
								{{#if system.hasDisadvantage}}
									<a class='dice-control disadvantage-off' title='{{localize 'Disable Disadvantage'}}'
										data-type='Equipment'>
										<i class="fa-solid fa-toggle-on fa-xl"></i>
									</a>
								{{else}}
									<a class='dice-control disadvantage-on' title='{{localize 'Enable Disadvantage'}}'
										data-type='Equipment'>
										<i class="fa-solid fa-toggle-off fa-xl"></i>
									</a>
								{{/if}}
							</div>
						</div>
					</div>
				</div>
			</header>

			{{!-- Sheet Tab Navigation --}}
			<nav class="sheet-tabs tabs" data-group="primary">
				{{!-- Default tab is specified in actor-sheet.mjs --}}
				<a class="item" data-tab="actions">
					<div class="tooltip">
						<label for="tooltiptext" class="tab-label">
							<i class="fa-regular fa-play" title="Actions"></i>
						</label>
						<span class="tooltiptext">
							Actions
						</span>
					</div>
				</a>
				<a class="item" data-tab="items">
					<div class="tooltip">
						<label for="tooltiptext" class="tab-label">
							<i class="fa-regular fa-briefcase" title="Equipment"></i>
						</label>
						<span class="tooltiptext">
							Equipment
						</span>
					</div>
				</a>
				<a class="item" data-tab="skills">
					<div class="tooltip">
						<label for="tooltiptext" class="tab-label">
							<i class="fa-regular fa-table-list" title="Skills"></i>
						</label>
						<span class="tooltiptext">
							Skills
						</span>
					</div>
				</a>
				<a class="item" data-tab="feats">
					<div class="tooltip">
						<label for="tooltiptext" class="tab-label">
							<i class="fa-regular fa-bookmark" title="Features"></i>
						</label>
						<span class="tooltiptext">
							Features
						</span>
					</div>
				</a>
				<a class="item" data-tab="effects">
					<div class="tooltip">
						<label for="tooltiptext" class="tab-label">
							<i class="fa-regular fa-certificate" title="Effects"></i>
						</label>
						<span class="tooltiptext">
							Effects
						</span>
					</div>
				</a>
				<a class="item" data-tab="biography">
					<div class="tooltip">
						<label for="tooltiptext" class="tab-label">
							<i class="fa-regular fa-book-open" title="Biography"></i>
						</label>
						<span class="tooltiptext">
							Biography
						</span>
					</div>
				</a>
			</nav>

			{{!-- Sheet Body --}}
			<section class="sheet-body">

				{{!-- Owned Actions Tab --}}
				<div class="tab actions" data-group="primary" data-tab="actions">
					{{!-- This is a Handlebars partial. They're stored in the `/parts` folder next to this sheet, and defined in module/helpers/templates.mjs --}}
					{{> "systems/cosmere-rpg-unofficial/templates/actor/parts/actor-actions.hbs"}}
				</div>

				{{!-- Biography Tab --}}
				<div class="tab biography" data-group="primary" data-tab="biography">
					{{> "systems/cosmere-rpg-unofficial/templates/actor/parts/actor-biography.hbs"}}
				</div>

				{{!-- Owned Items Tab --}}
				<div class="tab items" data-group="primary" data-tab="items">
					{{> "systems/cosmere-rpg-unofficial/templates/actor/parts/actor-items.hbs"}}
				</div>

				{{!-- Skills Tab --}}
				<div class="tab items" data-group="primary" data-tab="skills">
					{{> "systems/cosmere-rpg-unofficial/templates/actor/parts/actor-skills.hbs"}}
				</div>

				{{!-- Feats Tab --}}
				<div class="tab items" data-group="primary" data-tab="feats">
					{{> "systems/cosmere-rpg-unofficial/templates/actor/parts/actor-feats.hbs"}}
				</div>

				{{!-- Active Effects Tab --}}
				<div class="tab effects flexcol" data-group="primary" data-tab="effects">
					{{> "systems/cosmere-rpg-unofficial/templates/actor/parts/actor-effects.hbs"}}
				</div>

			</section>
		</section>
	</section>
</form>
