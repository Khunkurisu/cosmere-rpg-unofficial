{{!-- Sheet Header --}}
<header class="sheet-header">
	<img class='profile-img' src='{{actor.img}}' data-edit='img' data-action='onEditImage' title='{{actor.name}}'
		height='100' width='100' style="display:block;max-width:100px;max-height:100px;width:auto;height:auto;" />
	<div class="header-fields">
		<div class="resources grid grid-4col">
			<section class="main grid-span-2 align-left">
				<label for="name" class="resource-label">Name</label>
				<input name="actor.name" type="text" value="{{actor.name}}" placeholder="Name" />
			</section>
			<section class="main align-right">
				<label for="null" class="resource-label"></label>
			</section>
			<section class="main align-right">
				<label for="system.level" class="resource-label">Level</label>
				<input name="system.level" type="text" value="{{system.level}}" data-dtype="Number" />
			</section>
		</div>
		<div class="resources grid grid-3col">
			<div class="resource align-left">
				<label for="system.ancestry.name" class="resource-label">Ancestry</label>
				{{#if system.ancestry}}
					<div class="resource-content flexrow flex-right flex-between">
						<input type="text" name="system.ancestry.name" value="{{system.ancestry.name}}"
							data-dtype="string" disabled="true" />
					</div>
				{{else}}
					<div class="resource-content flexrow flex-right flex-between">
						<input type="text" name="system.ancestry.name" value="" data-dtype="string" disabled="true" />
					</div>
				{{/if}}
			</div>
			<div class="resource align-left">
				<label for="system.path.name" class="resource-label">Initial Path</label>
				{{#if system.path.[0]}}
					<div class="resource-content flexrow flex-right flex-between">
						<input type="text" name="system.path.0.name" value="{{system.path.0.name}}" data-dtype="string"
							disabled="true" />
					</div>
				{{else}}
					<div class="resource-content flexrow flex-right flex-between">
						<input type="text" name="system.path" value="" data-dtype="string" disabled="true" />
					</div>
				{{/if}}
			</div>
		</div>
		<div class="resources flexrow flexlarge flex-between flex-group-center">
			<div class="resource">
				<label for="system.usePlotDice" class="resource-label">Plot Dice</label>
				<div class="resource-content flexrow flex-right flex-between">
					{{#if system.usePlotDice}}
						<a class='dice-control plot-dice-off' title='{{localize 'Disable Plot Dice'}}'
							data-type='Equipment'>
							<i class="fa-solid fa-toggle-on fa-xl"></i>
						</a>
					{{else}}
						<a class='dice-control plot-dice-on' title='{{localize 'Enable Plot Dice'}}'
							data-type='Equipment'>
							<i class="fa-solid fa-toggle-off fa-xl"></i>
						</a>
					{{/if}}
				</div>
			</div>
			<div class="resource">
				<label for="system.hasAdvantage" class="resource-label">Advantage</label>
				<div class="resource-content flexrow flex-right flex-between">
					{{#if system.hasAdvantage}}
						<a class='dice-control advantage-off' title='{{localize 'Disable Advantage'}}'
							data-type='Equipment'>
							<i class="fa-solid fa-toggle-on fa-xl"></i>
						</a>
					{{else}}
						<a class='dice-control advantage-on' title='{{localize 'Enable Advantage'}}'
							data-type='Equipment'>
							<i class="fa-solid fa-toggle-off fa-xl"></i>
						</a>
					{{/if}}
				</div>
			</div>
			<div class="resource">
				<label for="system.hasDisadvantage" class="resource-label">Disadvantage</label>
				<div class="resource-content flexrow flex-right flex-between">
					{{#if system.hasDisadvantage}}
						<a class='dice-control disadvantage-off' title='{{localize 'Disable Disadvantage'}}'
							data-type='Equipment'>
							<i class="fa-solid fa-toggle-on fa-xl"></i>
						</a>
					{{else}}
						<a class='dice-control disadvantage-on' title='{{localize 'Enable Disadvantage'}}'
							data-type='Equipment'>
							<i class="fa-solid fa-toggle-off fa-xl"></i>
						</a>
					{{/if}}
				</div>
			</div>
		</div>
	</div>
</header>
