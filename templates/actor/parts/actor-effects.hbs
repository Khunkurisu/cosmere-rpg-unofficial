<div class="flexcol">
	<div>
		<ol class="items-list effects-list">
			<li class='item flexrow items-header'>
				<div class='item-name'>{{localize 'Active Effects'}}</div>
				<div class='item-controls'>
					<a class='item-control item-create' title='{{localize "DOCUMENT.Create" type="Effect"}}'
						data-type='Effect'>
						<i class='fas fa-plus'></i>
					</a>
					<a class='item-control item-search' title='{{localize "DOCUMENT.Search" type="Effect"}}'
						data-type='Effect'>
						<i class='fas fa-search'></i>
					</a>
				</div>
			</li>
			{{#each activeEffects as |effect id|}}
				<li class='item flexrow' data-item-id='{{effect._id}}'>
					<div class='item-name'>
						<h4 class='resource-label detail-item'>{{effect.name}}</h4>
					</div>
					<div class='item-controls'>
						<a class='item-control item-edit' title='{{localize "DOCUMENT.Update"}}'>
							<i class='fas fa-edit'></i>
						</a>
						<a class='item-control item-delete' title='{{localize "DOCUMENT.Delete"}}'>
							<i class='fas fa-trash'></i>
						</a>
					</div>
				</li>
				<li class='item flexrow' data-item-id='{{effect._id}}'
					{{#unless effect.system.showDetails}}style='display: none' {{/unless}}>
					<div class='item-details flex-group-center'>
						{{{effect.system.description}}}
					</div>
				</li>
			{{/each}}
		</ol>
		<hr />
		<ol class="items-list effects-list">
			<li class='item flexrow items-header'>
				<div class='item-name'>{{localize 'Inactive Effects'}}</div>
				<div class='item-controls'>
					<a class='item-control item-create' title='{{localize "DOCUMENT.Create" type="Effect"}}'
						data-type='Effect'>
						<i class='fas fa-plus'></i>
					</a>
					<a class='item-control item-search' title='{{localize "DOCUMENT.Search" type="Effect"}}'
						data-type='Effect'>
						<i class='fas fa-search'></i>
					</a>
				</div>
			</li>
			{{#each effects as |effect id|}}
				<li class='item flexrow' data-item-id='{{effect._id}}'>
					<div class='item-name'>
						<h4 class='resource-label detail-item'>{{effect.name}}</h4>
					</div>
					<div class='item-controls'>
						<a class='item-control item-edit' title='{{localize "DOCUMENT.Update"}}'>
							<i class='fas fa-edit'></i>
						</a>
						<a class='item-control item-delete' title='{{localize "DOCUMENT.Delete"}}'>
							<i class='fas fa-trash'></i>
						</a>
					</div>
				</li>
				<li class='item flexrow' data-item-id='{{effect._id}}'
					{{#unless effect.system.showDetails}}style='display: none' {{/unless}}>
					<div class='item-details flex-group-center'>
						{{{effect.system.description}}}
					</div>
				</li>
			{{/each}}
		</ol>
	</div>
</div>
