<div class="grid grid-3col">
	<div class="physical-skills flexcol">
		<label for="physical-skills-list" class="resource-label flexlarge flex-group-center"
			data-label="{{localize (lookup @root.config.defenses physical)}}">
			{{localize (lookup @root.config.defenses "physical")}}
		</label>
		<ol class='physical-skills-list'>
			{{#each system.skills.physical as |skill key|}}
				<li class="grid grid-5col">
					<div class="skill flexcol flex-group-center">
						<input type="text" name="system.skills.physical.{{key}}.value" value="{{skill.value}}"
							disabled="true" data-dtype="Number" />
					</div>
					<div class="skill grid-span-3 flex-group-center">
						<label for="system.skills.physical.{{key}}.value"
							class="resource-label rollable flexlarge flex-group-center"
							data-roll="d20+@skills.physical.{{key}}.value"
							data-label="{{localize (lookup @root.config.skills key)}}">
							{{localize (lookup @root.config.skills key)}}
							({{toUpperCase (localize (lookup @root.config.attributeAbbreviations skill.attribute))}})
						</label>
					</div>
					<div class="skill flexcol flex-group-center">
						<input type="text" name="system.skills.physical.{{key}}.bonus" value="{{skill.bonus}}"
							data-dtype="Number" />
					</div>
				</li>
			{{/each}}
		</ol>
	</div>
