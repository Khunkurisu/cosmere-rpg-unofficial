<ol class='actions-list'>
	<li class='action flexrow actions-header'>
		<div class='action-name'>{{localize 'Strikes'}}</div>
	</li>
	{{#each strikes as |action id|}}
		<li class='action flexrow' data-action-id='{{action._id}}' data-strike-index="{{id}}">
			<div class='strike-name flex-group-left flexlarge'>
				{{action.name}}
			</div>
			<div class='strike-attack flex-group-left'>
				<div class="tooltip">
					<label for="strike-attack" class="strike-label rollable" data-roll="1d20{{action.modifier}}"
						data-roll-type="strike" data-defense="physical" data-label="{{action.name}}">
						{{localize 'Attack'}}
					</label>
					<span class="tooltiptext">
						1d20{{action.modifier}} <i class="fa-regular fa-dice-d20"></i>
					</span>
				</div>
			</div>
			<div class='strike-damage flex-group-left'>
				<div class="tooltip">
					<label for="strike-damage" class="strike-label rollable"
						data-roll="{{action.formula}}{{action.modifier}}{{action.damageType}}" data-roll-type="damage"
						data-label="{{action.name}}">
						{{localize 'Damage'}}
					</label>
					<span class="tooltiptext">
						{{action.formula}}{{action.modifier}} <i
							class="fa-regular fa-{{damageIcon action.damageType}}"></i>
					</span>
				</div>
			</div>
			<div class='strike-damage-crit flex-group-left'>
				<div class="tooltip">
					<label for="strike-damage-crit" class="strike-label rollable"
						data-roll="{{action.formula}}min{{action.crit}}{{action.modifier}}{{action.damageType}}"
						data-roll-type="critical" data-label="{{action.name}}">
						{{localize 'Critical'}}
					</label>
					<span class="tooltiptext">
						{{action.formula}}{{action.modifier}}
						<i class="fa-regular fa-{{damageIcon action.damageType}}"></i>
						(max)
					</span>
				</div>
			</div>
			<div class='strike-graze flex-group-left'>
				<div class="tooltip">
					<label for="strike-graze" class="strike-label rollable"
						data-roll="{{action.formula}}{{action.damageType}}" data-roll-type="graze"
						data-label="{{action.name}}">
						{{localize 'Graze'}}
					</label>
					<span class="tooltiptext">
						{{action.formula}} <i class="fa-regular fa-{{damageIcon action.damageType}}"></i> (1 focus)
					</span>
				</div>
			</div>
		</li>
	{{/each}}
</ol>
<hr />
<ol class='actions-list'>
	{{#each potentialStrikes as |action id|}}
		<li class='item flexrow' data-item-id='{{action._id}}'>
			<div class='strike-name flex-group-left'>
				{{action.name}}
			</div>
			<div class='equip-strike-weapon flex-group-left flexlarge'>
				<a class='action-control item-equip' title='{{localize "Equip"}}'>
					{{localize "Equip"}}
					<i class='fa-regular fa-hand-back-fist'></i>
				</a>
			</div>
		</li>
	{{/each}}
</ol>
<hr />
<ol class='actions-list'>
	{{#each actions as |action id|}}
		<li class='item flexrow' data-item-id='{{action._id}}'>
			<div class='item-name'>
				<div class='item-image'>
					<a class='rollable' data-roll-type='item'>
						<img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
					</a>
				</div>
				<h4 class='resource-label detail-item'>
					{{item.name}}
					<i class="{{actionIcon action.cost}}"></i>
				</h4>
			</div>
		</li>
		<li class='item flexrow' data-item-id='{{action._id}}'
			{{#unless action.system.showDetails}}style='display: none' {{/unless}}>
			<div class='item-details flex-group-center'>
				{{{action.system.description}}}
			</div>
		</li>
	{{/each}}
</ol>
