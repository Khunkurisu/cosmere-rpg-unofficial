				</li>
			{{/each}}
		</ol>
		<ol class='items-list'>
			<li class='item flexrow items-header'>
				<div class='item-name'>{{localize 'Containers'}}</div>
				<div class='item-info'>{{localize 'Weight'}}</div>
				<div class='item-controls'>
					<a class='item-control item-create' title='{{localize "DOCUMENT.Create" type="Item"}}'
						data-type='Container'>
						<i class='fas fa-plus'></i>
					</a>
					<a class='item-control item-search' title='{{localize "DOCUMENT.Search" type="Item"}}'
						data-type='Container'>
						<i class='fas fa-search'></i>
					</a>
				</div>
			</li>
			{{#each containers as |container id|}}
				<li class='item flexrow' data-item-id='{{container._id}}'>
					<div class='item-name'>
						<div class='item-image container-toggle'>
							{{#if container.system.showStored}}
								<i class="fa-solid fa-box-open fa-lg"></i>
							{{else}}
								<i class="fa-solid fa-box fa-lg"></i>
							{{/if}}
						</div>
						<h4 class='resource-label detail-item'>{{container.name}}</h4>
					</div>
					<div class='item-weight flex-group-right'>
						{{container.system.displayWeight}}
					</div>
					<div class='item-controls'>
						{{#if container.system.equipped.isEquipped}}
