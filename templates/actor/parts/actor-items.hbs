<div class='tab items {{tab.cssClass}}' data-group='primary' data-tab='items'>
	<div class="flexrow flex-group-center">
		<div class="flexrow flex-group-center" style="max-width: 30%">
			<label for="system.marks" class="resource-label">Marks</label>
			<input type="text" name="system.marks" value="{{system.marks}}" data-dtype="Number" />
		</div>
	</div>
	<div>
		<ol class='items-list'>
			<li class='item flexrow items-header'>
				<div class='item-name'>{{localize 'Weapons'}}</div>
				<div class='item-info'>{{localize 'Quantity'}}</div>
				<div class='item-info'>{{localize 'Weight'}}</div>
				<div class='item-controls'>
					<a class='item-control item-create' title='{{localize "DOCUMENT.Create" type="Item"}}'
						data-type='Weapon'>
						<i class='fas fa-plus'></i>
					</a>
					<a class='item-control item-search' title='{{localize "DOCUMENT.Search" type="Item"}}'
						data-type='Weapon'>
						<i class='fas fa-search'></i>
					</a>
				</div>
			</li>
			{{#each weapons as |item id|}}
				<li class='item flexrow' data-item-id='{{item._id}}'>
					<div class='item-name'>
						<div class='item-image'>
							<a class='rollable' data-roll-type='item'>
								<img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
							</a>
						</div>
						<h4 class='resource-label detail-item'>{{item.name}}</h4>
					</div>
					<div class='item-quantity flex-group-center'>
						<a class='item-control item-quantity-dec' title='{{localize 'Decrease Quantity'}}'
							data-type='Equipment'>
							<i class='fas fa-minus'></i>
						</a> {{item.system.quantity}}
						<a class='item-control item-quantity-inc' title='{{localize 'Increase Quantity'}}'
							data-type='Equipment'>
							<i class='fas fa-plus'></i>
						</a>
					</div>
					<div class='item-weight flex-group-right'>
						{{item.system.displayWeight}}
					</div>
					<div class='item-controls'>
						{{#if item.system.equipped.isEquipped}}
							<a class='item-control item-unequip' title='{{localize "Unequip"}}'>
								<i class='fa-solid fa-hand-back-fist'></i>
							</a>
						{{else}}
							<a class='item-control item-equip' title='{{localize "Equip"}}'>
								<i class='fa-regular fa-hand-back-fist'></i>
							</a>
						{{/if}}
						<a class='item-control item-edit' title='{{localize "DOCUMENT.Update"}}'>
							<i class='fas fa-edit'></i>
						</a>
						<a class='item-control item-delete' title='{{localize "DOCUMENT.Delete"}}'>
							<i class='fas fa-trash'></i>
						</a>
					</div>
				</li>
				<li class='item flexrow' data-item-id='{{item._id}}'
					{{#unless item.system.showDetails}}style='display: none' {{/unless}}>
					<div class='item-details flex-group-center'>
						{{{item.system.description}}}
					</div>
				</li>
			{{/each}}
		</ol>
		<ol class='items-list'>
			<li class='item flexrow items-header'>
				<div class='item-name'>{{localize 'Armor'}}</div>
