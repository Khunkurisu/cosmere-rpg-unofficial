<div class="flexcol">
	<ol class='items-list'>
		<li class='item flexrow items-header'>
			<div class='item-name'>{{localize 'Ancestry'}}</div>
			<div class='item-controls'>
				<a class='item-control item-create' title='Create item' data-type='Feature' data-feat-type='Ancestry'>
					<i class='fas fa-plus'></i>
				</a>
				<a class='item-control item-search' title='{{localize "DOCUMENT.Search" type="Item"}}'
					data-type='Feature' data-feat-type='Ancestry'>
					<i class='fas fa-search'></i style='padding-left: 8px;'>
				</a>
			</div>
		</li>
		{{#if system.ancestry._id}}
			<li class='item flexrow' data-item-id='{{system.ancestry._id}}'>
				<div class='item-name' style='padding-left: 8px; margin: 3px;'>
					<h4 class='resource-label detail-item'>{{system.ancestry.name}}</h4>
				</div>
				<div class='item-controls'>
					<a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type='feature'}}'>
						<i class='fas fa-edit'></i>
					</a>
					<a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type='feature'}}'>
						<i class='fas fa-trash'></i>
					</a>
				</div>
			</li>
			<li class='item flexrow' data-item-id='{{item._id}}'
				{{#unless system.ancestry.system.showDetails}}style='display: none' {{/unless}}>
				<div class='item-details flex-group-center'>
					{{editor enrichedDescription target="system.ancestry.system.description" engine="prosemirror" button=false editable=false}}
				</div>
			</li>
		{{/if}}
		{{#each ancestryFeatures as |item id|}}
			<li class='item flexrow' data-item-id='{{item._id}}'>
				<div class='item-name'>
					<div class='item-image'>
						<a class='rollable' data-roll-type='item'>
							<img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
						</a>
					</div>
					<h4 class='resource-label detail-item'>{{item.name}}</h4>
				</div>
				<div class='item-controls'>
					<a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type='feature'}}'>
						<i class='fas fa-edit'></i>
					</a>
					<a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type='feature'}}'>
						<i class='fas fa-trash'></i>
					</a>
				</div>
			</li>
			<li class='item flexrow' data-item-id='{{item._id}}'
				{{#unless item.system.showDetails}}style='display: none' {{/unless}}>
				<div class='item-details flex-group-center'>
					{{editor enrichedDescription target="item.system.description" engine="prosemirror" button=false editable=false}}
				</div>
			</li>
		{{/each}}
	</ol>
</div>
