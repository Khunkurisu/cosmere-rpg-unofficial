<div>
	<div class="flexcol">
		<ol class='items-list'>
			<li class='item flexrow items-header'>
				<div class='item-name'>{{localize 'Ancestry'}}</div>
				<div class='item-controls'>
					<a class='item-control item-create' data-action="createDoc" data-document-class="Item"
						title='Create item' data-type='Feature' data-feat-type='Ancestry'>
						<i class='fas fa-plus'></i>
					</a>
					<a class='item-control item-search' data-action="searchDoc" data-type="Talent"
						title='{{localize "DOCUMENT.Search" type="Item"}}' data-type='Feature'
						data-feat-type='Ancestry'>
						<i class='fas fa-search'></i style='padding-left: 8px;'>
					</a>
				</div>
			</li>
			{{#if system.ancestry._id}}
				<li class='item flexrow' data-item-id='{{system.ancestry._id}}' data-drag='false'
					data-document-class='Item'>
					<div class='item-name' style='padding-left: 8px; margin: 3px;'>
						<span class='resource-label detail-item'
							data-action="detailToggle">{{system.ancestry.name}}</span>
					</div>
					<div class='item-controls'>
						<a class='item-control item-edit' data-action="viewDoc" data-document-class="Item"
							title='{{localize "DOCUMENT.Edit" type='feature'}}'>
							<i class='fas fa-edit'></i>
						</a>
						<a class='item-control item-delete' data-action="deleteDoc" data-document-class="Item"
							title='{{localize "DOCUMENT.Delete" type='feature'}}'>
							<i class='fas fa-trash'></i>
						</a>
					</div>
				</li>
				<li class='item flexrow' data-item-id='{{system.ancestry._id}}' data-drag='false'
					data-document-class='Item' {{#unless system.ancestry.system.showDetails}}style='display: none'
					{{/unless}}>
					<div class='item-details flex-group-center'>
						{{editor enrichedDescription target="system.ancestry.system.description" engine="prosemirror" button=false editable=false}}
					</div>
				</li>
			{{/if}}
			{{#each ancestryFeatures as |item id|}}
				<li class='item flexrow' data-item-id='{{item._id}}' data-drag='false' data-document-class='Item'>
					<div class='item-name'>
						<div class='item-image'>
							<a class='rollable' data-roll-type='item'>
								<img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
							</a>
						</div>
						<span class='resource-label detail-item' data-action="detailToggle">{{item.name}}</span>
					</div>
					<div class='item-controls'>
						<a class='item-control item-edit' data-action="viewDoc" data-document-class="Item"
							title='{{localize "DOCUMENT.Edit" type='feature'}}'>
							<i class='fas fa-edit'></i>
						</a>
						<a class='item-control item-delete' data-action="deleteDoc" data-document-class="Item"
							title='{{localize "DOCUMENT.Delete" type='feature'}}'>
							<i class='fas fa-trash'></i>
						</a>
					</div>
				</li>
				<li class='item flexrow' data-item-id='{{item._id}}' data-drag='false' data-document-class='Item'
					{{#unless item.system.showDetails}}style='display: none' {{/unless}}>
					<div class='item-details flex-group-center'>
						{{editor enrichedDescription target="item.system.description" engine="prosemirror" button=false editable=false}}
					</div>
				</li>
			{{/each}}
		</ol>
	</div>
